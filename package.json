{
  "name": "@rharkor/lib",
  "version": "1.0.0",
  "main": "./dist/logger/index.cjs",
  "module": "./dist/logger/index.mjs",
  "types": "./dist/logger/index.d.cts",
  "scripts": {
    "build": "pkgroll",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check \"src/**/*.{ts,d.ts}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,d.ts}\"",
    "test": "npm run -s build && run-s test:*",
    "test:esm": "npm run -s -w test/esm test",
    "test:cjs": "npm run -s -w test/cjs test",
    "debug": "npm run -s build && tsx debug/index.js"
  },
  "author": "HUORT Louis (https://louis.huort.com)",
  "homepage": "https://github.com/rharkor/logger",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rharkor/logger.git"
  },
  "license": "MIT",
  "description": "A simple logger for all your applications",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "logger",
    "log",
    "console",
    "cli",
    "terminal",
    "color",
    "colorful",
    "colorful-log",
    "colorful-logger",
    "colorful-console"
  ],
  "workspaces": [
    "test/*"
  ],
  "exports": {
    "require": {
      "types": "./dist/logger/index.d.cts",
      "default": "./dist/logger/index.cjs"
    },
    "import": {
      "types": "./dist/logger/index.d.mts",
      "default": "./dist/logger/index.mjs"
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.8.0",
    "globals": "^15.8.0",
    "npm-run-all": "^4.1.5",
    "pkgroll": "^2.1.1",
    "prettier": "3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.18.0"
  },
  "overrides": {
    "eslint": "^9.8.0"
  }
}